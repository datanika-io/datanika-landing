<section class="relative py-24">
  <div class="mx-auto max-w-7xl px-6">
    <div class="relative overflow-hidden rounded-2xl border border-slate-800 bg-slate-900 p-12 text-center md:p-16">
      <!-- Gradient border effect -->
      <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-violet-500/10 via-transparent to-cyan-400/10"></div>

      <!-- Glows -->
      <div class="absolute -left-20 -top-20 h-60 w-60 rounded-full bg-violet-600 opacity-10 blur-[100px]"></div>
      <div class="absolute -right-20 -bottom-20 h-60 w-60 rounded-full bg-cyan-500 opacity-10 blur-[100px]"></div>

      <div class="relative">
        <h2 class="text-3xl font-bold text-white sm:text-4xl">
          Ready to streamline your data?
        </h2>
        <p class="mx-auto mt-4 max-w-xl text-lg text-slate-400">
          Join teams using Datanika to build reliable, scalable data pipelines in minutes.
        </p>
        <div class="mt-8 flex flex-col items-center justify-center gap-4 sm:flex-row">
          <a href="https://app.datanika.com" class="btn-primary text-lg">
            Get Started Free
          </a>
          <a href="https://github.com/datanika/datanika" class="btn-secondary text-lg">
            View on GitHub
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
