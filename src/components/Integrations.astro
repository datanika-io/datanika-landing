---
const integrations = [
  "PostgreSQL",
  "MySQL",
  "MSSQL",
  "SQLite",
  "BigQuery",
  "Snowflake",
  "Redshift",
  "S3",
  "REST API",
  "CSV / JSON / Parquet",
  "Google Sheets",
];
---

<section id="integrations" class="relative py-24">
  <div class="mx-auto max-w-7xl px-6">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-white sm:text-4xl">
        Connect to <span class="gradient-text">anything</span>
      </h2>
      <p class="mx-auto mt-4 max-w-2xl text-lg text-slate-400">
        Datanika supports a wide range of sources and destinations out of the box.
      </p>
    </div>

    <div class="mt-16 flex flex-wrap items-center justify-center gap-4">
      {integrations.map((name) => (
        <div class="flex items-center gap-3 rounded-xl border border-slate-800 bg-slate-900/50 px-5 py-3 transition-colors hover:border-slate-700">
          <div class="flex h-8 w-8 items-center justify-center rounded-lg bg-violet-500/10">
            <svg class="h-4 w-4 text-violet-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
            </svg>
          </div>
          <span class="text-sm font-medium text-slate-300">{name}</span>
        </div>
      ))}
    </div>
  </div>
</section>
