---
const tiers = [
  {
    name: "Free",
    price: "$0",
    period: "forever",
    description: "For individuals and small projects.",
    features: [
      "Up to 3 pipelines",
      "1 team member",
      "Community support",
      "Core integrations",
    ],
    cta: "Get Started",
    highlighted: false,
  },
  {
    name: "Pro",
    price: "$49",
    period: "/month",
    description: "For growing teams with advanced needs.",
    features: [
      "Unlimited pipelines",
      "Up to 10 team members",
      "Priority support",
      "All integrations",
      "Advanced scheduling",
      "Data catalog",
    ],
    cta: "Start Free Trial",
    highlighted: true,
  },
  {
    name: "Enterprise",
    price: "Custom",
    period: "",
    description: "For organizations at scale.",
    features: [
      "Everything in Pro",
      "Unlimited team members",
      "SSO & SAML",
      "Dedicated support",
      "SLA guarantees",
      "On-premise option",
    ],
    cta: "Contact Us",
    highlighted: false,
  },
];
---

<section id="pricing" class="relative py-24">
  <div class="mx-auto max-w-7xl px-6">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-white sm:text-4xl">
        Simple, transparent <span class="gradient-text">pricing</span>
      </h2>
      <p class="mx-auto mt-4 max-w-2xl text-lg text-slate-400">
        Start free and scale as your data needs grow.
      </p>
    </div>

    <div class="mt-16 grid gap-8 lg:grid-cols-3">
      {tiers.map((tier) => (
        <div
          class:list={[
            "relative rounded-xl border p-8 transition-colors",
            tier.highlighted
              ? "border-violet-500/50 bg-slate-900"
              : "border-slate-800 bg-slate-900/50 hover:border-slate-700",
          ]}
        >
          {tier.highlighted && (
            <div class="absolute -top-3 left-1/2 -translate-x-1/2 rounded-full bg-gradient-to-r from-violet-500 to-cyan-400 px-4 py-1 text-xs font-bold text-white">
              Most Popular
            </div>
          )}

          <h3 class="text-xl font-semibold text-white">{tier.name}</h3>
          <p class="mt-2 text-sm text-slate-400">{tier.description}</p>

          <div class="mt-6 flex items-baseline gap-1">
            <span class="text-4xl font-bold text-white">{tier.price}</span>
            {tier.period && <span class="text-slate-400">{tier.period}</span>}
          </div>

          <ul class="mt-8 space-y-3">
            {tier.features.map((feature) => (
              <li class="flex items-center gap-3 text-sm text-slate-300">
                <svg class="h-4 w-4 shrink-0 text-violet-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                {feature}
              </li>
            ))}
          </ul>

          <a
            href="https://app.datanika.com"
            class:list={[
              "mt-8 block w-full rounded-lg py-3 text-center text-sm font-semibold transition-colors",
              tier.highlighted
                ? "btn-primary"
                : "btn-secondary",
            ]}
          >
            {tier.cta}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
